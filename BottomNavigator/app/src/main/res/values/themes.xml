<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BottomNavigator" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">#6f5eed</item>
        <item name="colorPrimaryVariant">#6f5eed</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/EMERALD</item>
        <item name="colorSecondaryVariant">@color/CARROT</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>
    <style name="Theme.BottomNavigator" parent="Base.Theme.BottomNavigator" />

</resources>